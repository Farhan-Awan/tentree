{% comment %}
<style>
  .GeneratedMarquee {
    display: flex;
    align-items: center;
    background: black;
  }
  .marquee-item {
    display: flex;
       display: inline-flex;
    align-items: center;
    margin-right: 20px;
    color: #fff;
    text-transform: uppercase;
    font-family: 'Moderat';
  }
  .marquee-item img {
    margin-right: 10px;
  }
</style>
<div class="csm-marq">
  {% if template.name == 'index' %}
  <marquee class="GeneratedMarquee" direction="left" scrollamount="15" behavior="scroll">
    {% for block in section.blocks %}
      <div class="marquee-item">
        {% if block.settings.icon %}
          <img src="{{ block.settings.icon | img_url: '100x' }}" alt="Marquee Icon">
        {% endif %}
        {% if block.settings.text %}
          <span>{{ block.settings.text }}</span>
        {% endif %}
      </div>
    {% endfor %}
  </marquee>

  {% endif %}
</div>
{% endcomment %}
<style>
  .marquee-wrapper {
    overflow: hidden;
    white-space: nowrap;
    box-sizing: border-box;
  }
  .marquee-content {
    display: inline-block;
    white-space: nowrap;
    animation: marquee 20s linear infinite;
  }
  .marquee-item {
    display: inline-flex;
    align-items: center;
    margin-right: 20px;
    color: #fff;
    text-transform: uppercase;
    font-family: 'Moderat';
  }
  .marquee-item img {
    margin-right: 10px;
  }
  @keyframes marquee {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
<div class="csm-marq">
  {% if template.name == 'index' %}
  <div class="marquee-wrapper">
    <div class="marquee-content">
      {% for block in section.blocks %}
        <div class="marquee-item">
          {% if block.settings.icon %}
            <img src="{{ block.settings.icon | img_url: '100x' }}" alt="Marquee Icon">
          {% endif %}
          {% if block.settings.text %}
            <span>{{ block.settings.text }}</span>
          {% endif %}
        </div>
      {% endfor %}
      {% comment %} Duplicate the content for smooth looping {% endcomment %}
      {% for block in section.blocks %}
        <div class="marquee-item">
          {% if block.settings.icon %}
            <img src="{{ block.settings.icon | img_url: '100x' }}" alt="Marquee Icon">
          {% endif %}
          {% if block.settings.text %}
            <span>{{ block.settings.text }}</span>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}
</div>




