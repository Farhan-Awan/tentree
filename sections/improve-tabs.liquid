
<style>
  .product-tabs-section {
    display: flex;
    background: #FDF6F1;
    border-top: 1px solid #1F1F1F;
    padding-bottom: 30px;
  }
   .sec-title-improve h1 {
    margin-bottom: 10px;
  }
  .tabs-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0 3rem;
  }
   .tab-button {
    padding: 20px 60px;
    cursor: pointer;
    border: none;
    background-color: #FDF6F1;
    margin-bottom: 5px;
    text-align: center;
    width: 230px;
    margin: 10px;
     border: 1px solid;
     font-family: 'moderat';
    font-size: 20px;
    text-transform: uppercase;
  }
  .tab-button.active {
    background-color: #1F1F1F;
    color: #fff;
  }
  .products-container {
    flex: 3;
    padding: 20px;
    padding-top: 70px;
  }
  .products-list {
     position: absolute;
    visibility: hidden;
    opacity: 0;
    transition: visibility 0s, opacity 0.5s linear;
  }
  .products-list.active {
    position: relative;
    visibility: visible;
    opacity: 1;  
  }
  .product-item {
    margin-bottom: 20px;
  }
  .product-item img {
    max-width: 100%;
    width: 300px;
        border: 1px solid #000;
  }
  .product-item h3 {
    margin: 10px 0;
  }
   #shirt-collection-sec-iii, #baron, #anell, #best-sellers-west-1 {
    display: flex;
    justify-content: space-around;
    align-items: center;
}
  .tab-below-content {
    display: flex;
    justify-content: space-around;
    align-items: center;
}
  .quiz-title-improve a {
    color: #000;
}
.need-title-improve a {
    text-decoration: none;
}
  input.btn.add-to-cart.button {
    background: #FEC627;
    color: #000;
    font-family: 'moderat';
    text-transform: uppercase;
    width: 320px;
    border: 1px solid;
}
  .title-price-content{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 50px;
  }
  span.rating {
    font-size: 25px;
}
  .product-tags {
    font-family: 'Moderat';
    font-size: 16px;
    padding-bottom: 30px;
  }
  a.revi_link {
    font-size: 14px;
    color: #000;
}
.product-reviews {
    padding-top: 50px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 20px;
}
 
</style>

<div class="product-tabs-section">
  
  <div class="tabs-container page-width">
    <div class="sec-title-improve">
    <h1>{{ section.settings.sec_title }}</h1>
  </div>
    {% for block in section.blocks %}
      <button class="tab-button" data-collection-handle="{{ block.settings.collection_handle }}">{{ block.settings.tab_title }}</button>
    {% endfor %}
    <div class="tab-below-content">
     <div class="need-title-improve">
       <a href="#">
    <h3>{{ section.settings.need_else }}</h3>
       </a>
  </div>
     <div class="quiz-title-improve">
    <a href="#">
    <p>{{ section.settings.take_quiz }}</p>
    </a>
  </div>
    </div>
  </div>
  <div class="products-container">
    {% for block in section.blocks %}
      <div class="products-list" id="{{ block.settings.collection_handle }}">
        {% assign collection = collections[block.settings.collection_handle] %}
        {% if collection %}
          {% for product in collection.products limit: 3 %}
            <div class="product-item">
              <img src="{{ product.featured_image | image_url: width: 300 }}" width="100%" height="auto" alt="{{ product.title }}">
              <div class="title-price-content"><h3>{{ product.title | truncate: 15 }}</h3> <h3>{{ product.price | money }}</h3></div>
              <div class="product-reviews">
                {% if product.metafields.reviews.rating2 %}
                <span class="rating">
                  {% for i in (1..5) %}
                    {% if product.metafields.reviews.rating2 >= i %}
                  ★
                    {% else %}
                  ☆
                    {% endif %}
                {% endfor %}
                  </span>
               <a href="#" class="revi_link"> <span class="review-count">({{ product.metafields.reviews.count2 }} Reviews)</span></a>
                {% endif %}
                </div>
               <div class="product-tags">
                {% for tag in product.tags limit: 3 %}
                  <span class="tag">{{ tag }} |</span>
                {% endfor %}
              </div>
              <form method="post" action="/cart/add">
                    <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
                      <input min="1" type="hidden" id="quantity" name="quantity" value="1"/>
                        <input type="submit" value="Add to cart"  data-product-id="{{ product.id }}" class="btn add-to-cart button" />
                        
                      </form>
            {% comment %}  <a href="{{ product.url }}" class="btn">View Product</a> {% endcomment %}
            </div>
          {% endfor %}
        {% else %}
          <p>No products found in this collection.</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>

    <div class="page-width">
      {% if template.name == 'index' %}
      <marquee class="GeneratedMarquee" direction="right" scrollamount="9" behavior="scroll">SUSTAINABLE ☺ ETHICAL ☺ ORGANIC</marquee>
       {% endif %}
    </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var tabs = document.querySelectorAll('.tab-button');
    var productLists = document.querySelectorAll('.products-list');

    tabs.forEach(function(tab) {
      tab.addEventListener('click', function() {
        tabs.forEach(function(t) { t.classList.remove('active'); });
        tab.classList.add('active');

        var collectionHandle = tab.getAttribute('data-collection-handle');
        productLists.forEach(function(list) {
          if (list.id === collectionHandle) {
            list.classList.add('active');
          } else {
            list.classList.remove('active');
          }
        });
      });
    });

    // Activate the first tab and product list by default
    if (tabs.length > 0) {
      tabs[0].classList.add('active');
      productLists[0].classList.add('active');
    }
  });
</script>

{% schema %}
{
  "name": "improve tabs",
  "settings": [
        {
          "type": "text",
          "id": "sec_title",
          "label": "section Title"
        },
        {
          "type": "text",
          "id": "all_txt",
          "label": "Shop All Title"
        },
        {
          "type": "text",
          "id": "need_else",
          "label": "somethning Else Title"
        },
        {
          "type": "text",
          "id": "take_quiz",
          "label": "Take Quiz Title"
        }
    
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title"
        },
        {
          "type": "collection",
          "id": "collection_handle",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "improve tabs"
    }
  ]
}
{% endschema %}